<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/loadingIv"
        android:layout_width="@dimen/loading_iv_size"
        android:layout_height="@dimen/loading_iv_size"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/cd_faulty_state_image"
        app:srcCompat="@drawable/avd_loading" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/loadingMessageTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:gravity="center"
        android:padding="@dimen/default_padding"
        android:textAppearance="@style/TextAppearance.Pawz.Headline5"
        android:textColor="?colorOnSurface"
        android:text="@string/lbl_fetching" />

</LinearLayout>