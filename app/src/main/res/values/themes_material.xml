<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="Pawz.DayNight" parent="Base.Pawz">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>

        <item name="android:statusBarColor">@color/light_orange_50</item>
        <!--        <item name="android:navigationBarColor">@color/grey_lighter</item>-->

        <!--        <item name="android:windowBackground">@color/grey_lighter</item>-->
    </style>

    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.Pawz" parent="Base.MaterialThemeBuilder">

        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/light_orange_50</item>
        <item name="colorPrimaryVariant">@color/brown_200</item>

        <!--        <item name="colorSecondary">@color/amber_50</item>-->
        <!--        <item name="colorSecondaryVariant">@color/orange_50</item>-->

        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/orange_50</item>
        <item name="colorSurface">@color/orange_50</item>
        <item name="colorError">@color/red_700</item>

        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/grey_700</item>
        <item name="colorOnSecondary">@color/grey_700</item>
        <item name="colorOnBackground">@color/grey_700</item>
        <item name="colorOnSurface">@color/grey_700</item>
        <item name="colorOnError">@color/grey_700</item>


        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Pawz.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Pawz.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Pawz.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Pawz.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Pawz.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Pawz.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Pawz.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Pawz.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Pawz.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Pawz.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Pawz.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Pawz.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Pawz.Overline</item>


        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>


        <!--        <item name="android:textColorPrimary">@color/primaryTextColor</item>-->
        <!--        <item name="android:textColorSecondary">@color/secondaryTextColor</item>-->

        <!--        <item name="android:windowLightStatusBar">true</item>-->
    </style>


    <style name="Base.MaterialThemeBuilder" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>

        <item name="android:textColorPrimary">?colorOnPrimary</item>
        <item name="android:textColorSecondary">?colorOnSecondary</item>
    </style>

</resources>


